<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_margin="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_list_of_entries_margintop"
                android:layout_marginStart="@dimen/item_list_of_entries_title_marginstart"
                android:layout_marginEnd="@dimen/item_list_of_entries_title_marginend"
                tools:text="@string/item_list_of_entries_title_example"/>

        <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_list_of_entries_text_margin"
                tools:text="@string/item_list_of_entries_text_example"/>

    </LinearLayout>

</android.support.v7.widget.CardView>